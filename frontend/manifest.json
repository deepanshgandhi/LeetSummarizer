{
  "manifest_version": 3,
  "name": "LeetCode Scraper",
  "version": "1.0",
  "description": "Scrapes LeetCode problem data.",
  "permissions": [
      "activeTab",
      "declarativeContent",
      "storage"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["*://leetcode.com/*"],
          "js": ["content.js"]
      }
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
      }
  }
}
